{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node update-version.js ${nextRelease.version}",
        "publishCmd": "echo 'Version updated to ${nextRelease.version}'"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/electron/Packaged/*.exe",
            "label": "Windows Installer"
          },
          {
            "path": "dist/electron/Packaged/*.dmg",
            "label": "macOS Installer"
          },
          {
            "path": "dist/electron/Packaged/*.AppImage",
            "label": "Linux AppImage"
          },
          {
            "path": "dist/electron/Packaged/*.deb",
            "label": "Linux DEB Package"
          }
        ]
      }
    ]
  ]
}
